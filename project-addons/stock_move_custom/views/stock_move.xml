<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_stock_move_tree_custom_button" model="ir.ui.view">
        <field name="name">stock.move.form.custom.anz</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">1</attribute>
            </xpath>
            <field name="product_uom_qty" position="after">
                <field name="qty_available"/>
                <field name="quantity_done"/>
            </field>
        </field>
    </record>

    <record id="view_stock_move_custom_button" model="ir.ui.view">
        <field name="name">stock.move.form.custom.anz</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="edit">1</attribute>
            </xpath>
            <field name="state" position="before">
                    <field name="picking_id" invisible="1"/>
                    <button name="action_confirm_for_pda" attrs="{'invisible': [('picking_id','!=', False), ('state', '!=', 'draft')]}"
                            string="Confirmar" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="action_assign_for_pda" attrs="{'invisible': [('picking_id','!=', False), ('state', '!=', 'confirmed')]}"
                            string="Buscar disponibilidad" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="force_assign_for_pda" attrs="{'invisible': [('picking_id','!=', False), ('state', 'not in', ('partially_available', 'confirmed'))]}"
                            string="Forzar disponibilidad" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="action_done_for_pda" attrs="{'invisible': [('picking_id','!=', False), ('state', '!=', 'assigned')]}"
                            string="Validar" groups="stock.group_stock_user" type="object" class="oe_highlight"/>
                    <button name="action_cancel_for_pda" attrs="{'invisible': ['|', ('picking_id', '!=', False), ('state', 'not in', ('assigned', 'confirmed', 'partially_available', 'draft', 'waiting'))]}"
                            string="Cancelar" groups="base.group_user" type="object"/>
                    <button name="do_unreserve_for_pda" string="Unreserve" groups="base.group_user" type="object"
                            attrs="{'invisible': ['|', ('picking_id', '!=', False), ('state', 'not in', ('assigned', 'partially_available'))]}"/>
            </field>
            <field name="name" position="before">
                <label for="qty_available"/>
                <div class="o_row">
                    <field name="qty_available"/>
                    <field name="product_uom" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                </div>
                <label for="reserved_availability"/>
                <div class="o_row">
                    <field name="reserved_availability"/>
                    <field name="product_uom" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                </div>
                <label for="quantity_done"/>
                <div class="o_row">
                    <field name="quantity_done"/>
                    <field name="product_uom" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                </div>
            </field>
            <xpath expr="//group[@name='origin_grp']" position="before">
                <field name="move_line_ids"></field>
            </xpath>
            <xpath expr="//group[@name='origin_grp']" position="attributes">
                <attribute name="attrs">{'invisible':[('picking_id', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//group[@name='linked_group']" position="attributes">
                <attribute name="attrs">{'invisible':[('picking_id', '=', False)]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>

