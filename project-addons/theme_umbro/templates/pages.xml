<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <!-- ======================================= Page Blog ======================================= -->

    <!-- Blog Menu -->
    <record id="menu_news" model="website.menu">
        <field name="name">Blog</field>
        <!--<field name="url" eval="'/blog/'+str(ref('website_blog.blog_blog_1'))"/>-->
        <field name="url">/blog</field>
        <field name="parent_id" ref="umbro_main_menu"/>
        <field name="sequence" type="int">40</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
    </record>

    <!-- ======================================= Page Work with Us ======================================= -->

    <!-- A Work with Us Template -->
    <template id="page_work_with_us">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Work with Us Page -->
    <record id="id_page_work_with_us" model="website.page">
         <field name="name">Work with Us</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/page_work_with_us</field>
         <field name="view_id" ref="page_work_with_us"/>
     </record>

    <!-- ======================================= Page Newsletter ======================================= -->

    <!-- Newsletter Template -->
    <template id="page_newsletter">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Newsletter Page -->
    <record id="id_page_newsletter" model="website.page">
         <field name="name">Newsletter</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/newsletter</field>
         <field name="view_id" ref="page_newsletter"/>
     </record>

    <!-- ======================================= Page About us ======================================= -->

    <!-- About us Template -->
    <template id="template_about_us">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- About us Page -->
    <record id="page_about_us" model="website.page">
         <field name="name">About us</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/about-us</field>
         <field name="view_id" ref="template_about_us"/>
     </record>

    <!-- About us Page -->
    <record id="menu_about_us" model="website.menu">
        <field name="name">About us</field>
        <field name="url">/page/about-us</field>
        <field name="parent_id" ref="umbro_main_menu"/>
        <field name="sequence" type="int">35</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
    </record>

    <!-- ======================================= Page Our shops ======================================= -->

    <!-- Our shop Template -->
    <template id="template_our_shops">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Our shop Page -->
    <record id="page_our_shops" model="website.page">
         <field name="name">Our shops</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/our-shops</field>
         <field name="view_id" ref="template_our_shops"/>
     </record>

    <!-- Our shop Page -->
    <record id="menu_our_shops" model="website.menu">
        <field name="name">Our shops</field>
        <field name="url">/page/our-shops</field>
        <field name="parent_id" ref="umbro_main_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
    </record>

    <!-- ======================================= Page Open Your Shop ======================================= -->

    <!--Template Open Your Shop -->
    <template id="template_open_shop">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Page Open Your Shop-->
    <record id="page_open_shop" model="website.page">
        <field name="name">Open Your Shop</field>
        <field name="website_published">True</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
        <field name="url">/page/open_shop</field>
        <field name="view_id" ref="template_open_shop"/>
     </record>

    <!-- Open Shop Menu -->
    <record id="open_shop_menu" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop</field>
        <field name="page_id" ref="page_open_shop"/>
        <field name="parent_id" ref="umbro_main_menu"/>
        <field name="sequence" type="int">25</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- Open Shop Submenu -->
    <record id="open_shop_submenu_open" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop#open_section</field>
        <field name="parent_id" ref="open_shop_menu"/>
        <field name="sequence" type="int">10</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="open_shop_submenu_steps" model="website.menu">
        <field name="name">Open Your Shop Steps</field>
        <field name="url">/page/open_shop#step_section</field>
        <field name="parent_id" ref="open_shop_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="open_shop_submenu_request" model="website.menu">
        <field name="name">Open Request</field>
        <field name="url">/page/open_shop#request_section</field>
        <field name="parent_id" ref="open_shop_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="website_base_multi_anz.umbro_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- ======================================= Information pages ======================================= -->

    <!--Template Delivery-->
    <template id="template_delivery">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Page Delivery -->
    <record id="page_delivery" model="website.page">
        <field name="name">Delivery</field>
        <field name="website_published">True</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
        <field name="url">/page/delivery</field>
        <field name="view_id" ref="template_delivery"/>
     </record>

    <!--Template Payment method-->
    <template id="template_payment">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Page Payment method -->
    <record id="page_payment" model="website.page">
        <field name="name">Payment method</field>
        <field name="website_published">True</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.umbro_website')])]"/>
        <field name="url">/page/payment</field>
        <field name="view_id" ref="template_payment"/>
     </record>

 </odoo>