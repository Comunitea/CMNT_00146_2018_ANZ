<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_picking_form_company_available" model="ir.ui.view">
            <field name="name">view.picking.form.company_available</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']/tree/field[@name='product_uom_qty']" position="before">
                    <field name="qty_available_global"
                           options='{"fg_color": "chocolate: 1==1"}'
                           attrs="{'column_invisible': [('parent.state', 'not in', ('confirmed', 'partially_available'))]}"/>
                    <field name="global_stock_loc_display_name"
                           options='{"fg_color": "chocolate: 1==1"}'
                           attrs="{'column_invisible': [('parent.state', 'not in', ('confirmed', 'partially_available'))]}"/>
                    <field name="global_stock_loc_ids"  widget="many2many_tags" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='move_lines']/tree/field[@name='quantity_done']" position="attributes">
                    <attribute name="attrs"></attribute>
                </xpath>

            </field>

     </record>
</odoo>
