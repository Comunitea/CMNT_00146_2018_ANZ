                        <p>We are a great company that ...</p>
                        <p>...</p>
                    </section>
                    <section id="group_section">
                        <h1>Bemar Group</h1>
                        <h2>Bemar Group is ...</h2>
                        <p>The Bemar companies are ...</p>
                        <p>...</p>
                    </section>
                    <section id="nation_section">
                        <h1>Nation Presence</h1>
                        <h2>Form to open your shop with Bemar Group</h2>
                        <p>These are the requirements:</p>
                        <p>...</p>
                    </section>
                    <!-- Snippets' area -->
                    <div class="oe_structure" />
                </div>
            </div>
        </t>
    </template>

    <record id="id_page_bemar_group" model="website.page">
         <field name="name">Bemar Group</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
         <field name="website_published">True</field>
         <field name="url">/page/bemar_group</field>
         <field name="view_id" ref="bemar_page_bemar_group"/>
     </record>

    <!-- Bemar Group Menu -->
    <record id="bemar_group_menu" model="website.menu">
        <field name="name">Bemar</field>
        <field name="url">/page/bemar_group</field>
        <field name="page_id" ref="id_page_bemar_group"/>
        <field name="parent_id" ref="bemar_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.bemar_website"/>
        <field name="website_published">True</field>
    </record>


