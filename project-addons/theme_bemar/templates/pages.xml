<odoo noupdate="1">

    <!-- ======================================= Page Open Your Shop ======================================= -->
    <template id="bemar_page_open_shop_menu">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <section id="open_section">
                        <h1>Open Your Shop</h1>
                        <h2>Instructions to open your shop with Bemar Group</h2>
                        <p>These are the instructions:</p>
                        <p>...</p>
                    </section>
                    <section id="step_section">
                        <h1>Open Your Shop Steps</h1>
                        <h2>Steps to open your shop with Bemar Group</h2>
                        <p>These are the instructions:</p>
                        <p>...</p>
                    </section>
                    <section id="request_section">
                        <h1>Open Request</h1>
                        <h2>Form to open your shop with Bemar Group</h2>
                        <p>These are the requirements:</p>
                        <p>...</p>
                    </section>
                    <!-- Snippets' area -->
                    <div class="oe_structure" />
                </div>
            </div>
        </t>
    </template>

    <record id="bemar_id_page_open_shop_menu" model="website.page">
         <field name="name">Open Your Shop</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
         <field name="website_published">True</field>
         <field name="url">/page/open_shop</field>
         <field name="view_id" ref="bemar_page_open_shop_menu"/>
     </record>

    <!-- Open Shop Menu -->
    <record id="bemar_open_shop_menu" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop</field>
        <field name="page_id" ref="bemar_id_page_open_shop_menu"/>
        <field name="parent_id" ref="bemar_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.bemar_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- Open Shop Submenu -->
    <record id="bemar_open_shop_submenu_open" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop#opensection</field>
        <field name="parent_id" ref="bemar_open_shop_menu"/>
        <field name="sequence" type="int">10</field>
        <field name="website_id" ref="module_multi_base_anz.bemar_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="bemar_open_shop_submenu_steps" model="website.menu">
        <field name="name">Open Your Shop Steps</field>
        <field name="url">/page/open_shop#step_section</field>
        <field name="parent_id" ref="bemar_open_shop_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.bemar_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="bemar_open_shop_submenu_request" model="website.menu">
        <field name="name">Open Request</field>
        <field name="url">/page/open_shop#request_section</field>
        <field name="parent_id" ref="bemar_open_shop_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="module_multi_base_anz.bemar_website"/>
        <field name="website_published">True</field>
    </record>

