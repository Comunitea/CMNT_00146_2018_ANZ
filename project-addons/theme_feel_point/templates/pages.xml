<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <!-- ======================================= Page Open Your Shop ======================================= -->
    <template id="feel_point_page_open_shop_menu">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <section id="open_section">
                        <h1>Open Your Shop</h1>
                        <h2>Instructions to open your shop with Anzamar Group</h2>
                        <p>These are the instructions:</p>
                        <p>...</p>
                    </section>
                    <section id="step_section">
                        <h1>Open Your Shop Steps</h1>
                        <h2>Steps to open your shop with Anazamar Group</h2>
                        <p>These are the instructions:</p>
                        <p>...</p>
                    </section>
                    <section id="request_section">
                        <h1>Open Request</h1>
                        <h2>Form to open your shop with Anzamar Group</h2>
                        <p>These are the requirements:</p>
                        <p>...</p>
                    </section>
                    <!-- Snippets' area -->
                    <div class="oe_structure" />
                </div>
            </div>
        </t>
    </template>

    <record id="feel_point_id_page_open_shop_menu" model="website.page">
         <field name="name">Open Your Shop</field>
        <field name="website_id" ref="website_base_multi_anz.point_sport_website"/>
         <field name="website_published">True</field>
         <field name="url">/page/open_shop</field>
         <field name="view_id" ref="feel_point_page_open_shop_menu"/>
     </record>

    <!-- Open Shop Menu -->
    <record id="feel_point_open_shop_menu" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop</field>
        <field name="page_id" ref="feel_point_id_page_open_shop_menu"/>
        <field name="parent_id" ref="feel_point_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website_base_multi_anz.feel_point_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- Open Shop Submenu -->
    <record id="feel_point_open_shop_submenu_open" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop#opensection</field>
        <field name="parent_id" ref="feel_point_open_shop_menu"/>
        <field name="sequence" type="int">10</field>
        <field name="website_id" ref="website_base_multi_anz.feel_point_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="feel_point_open_shop_submenu_steps" model="website.menu">
        <field name="name">Open Your Shop Steps</field>
        <field name="url">/page/open_shop#step_section</field>
        <field name="parent_id" ref="feel_point_open_shop_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="website_base_multi_anz.feel_point_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="feel_point_open_shop_submenu_request" model="website.menu">
        <field name="name">Open Request</field>
        <field name="url">/page/open_shop#request_section</field>
        <field name="parent_id" ref="feel_point_open_shop_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="website_base_multi_anz.feel_point_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- ======================================= Page Blog ======================================= -->

    <!--Blog Menu-->
    <record id="menu_news" model="website.menu">
        <field name="name">Blog</field>
        <!--<field name="url" eval="'/blog/'+str(ref('website_blog.blog_blog_1'))"/>-->
        <field name="url">/blog</field>
        <field name="parent_id" ref="anzamar_main_menu"/>
        <field name="sequence" type="int">40</field>
        <field name="website_id" ref="website_base_multi_anz.feel_point_website"/>
    </record>

    <!-- ======================================= Page Work with Us ======================================= -->

    <!--A Work with Us Template-->
    <template id="page_work_with_us">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Work with Us Page -->
    <record id="id_page_work_with_us" model="website.page">
         <field name="name">Work with Us</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.feel_point_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/page_work_with_us</field>
         <field name="view_id" ref="page_work_with_us"/>
     </record>

    <!-- ======================================= Page Newsletter ======================================= -->

    <!--Newsletter Template-->
    <template id="page_newsletter">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <!-- Newsletter Page -->
    <record id="id_page_newsletter" model="website.page">
         <field name="name">Newsletter</field>
         <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.feel_point_website')])]"/>
         <field name="website_published">True</field>
         <field name="url">/page/newsletter</field>
         <field name="view_id" ref="page_newsletter"/>
     </record>

 </odoo>