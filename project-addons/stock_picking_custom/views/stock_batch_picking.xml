<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="stock_batch_picking_form_custom_anz">
        <field name="name">stock.batch.picking.form.custom.anz</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="stock_batch_picking.stock_batch_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_ids']" position="attributes">
                <attribute name="domain">
                    [('batch_picking_id', '=', False), ('state', 'not in', ('done', 'cancel'))]
                </attribute>
            </xpath>

            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_id']" position="before">
                <!-- <field name="sequence" invisible="1"/> -->
                <field name="sequence"/>
            </xpath>

            <xpath expr="//field[@name='move_line_ids']/tree" position="attributes">
                <attribute name="default_order">
                    sequence
                </attribute>
            </xpath>

            <field name="move_lines" position="after">
                <group class="oe_right">
                    <div>
                        <button class="oe_link oe_right" context="{'model_dest': 'stock.move'}" name="batch_force_set_assigned_qty_done" type="object" string="↳Copy assigned to done"
                                attrs="{'invisible':[('state','!=', 'assigned')]}"/>
                    </div>
                    <div>
                        <button class="oe_link oe_right" context="{'model_dest': 'stock.move'}" name="batch_force_reset_qties" type="object" string="↳Reset qties" states="assigned"/>
                    </div>
                    <field name="reserved_availability" class ="oe_inline" />
                    <field name="quantity_done" class ="oe_inline" />
                </group>
            </field>

            <field name="move_line_ids" position="after">
                <group class="oe_right">
                    <div>
                        <button class="oe_link oe_right" context="{'model_dest': 'stock.move.line'}" name="batch_force_set_assigned_qty_done" type="object" string="↳Copy assigned to done"
                            attrs="{'invisible':[('state','!=', 'assigned')]}"/>
                    </div>
                    <div>
                        <button class="oe_link oe_right" context="{'model_dest': 'stock.move.line'}" name="batch_force_reset_qties" type="object" string="↳Reset qties" states="assigned"/>
                    </div>
                    <field name="reserved_availability_lines" class ="oe_inline" />
                    <field name="quantity_done_lines" class ="oe_inline" />
                </group>
            </field>

            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_uom_qty']" position="after">
                <button name="force_set_qty_done"
                        string="↳Copy qty. to done"
                        type="object"
                        icon="fa-download"
                        context="{'model_dest': 'stock.move.line'}"
                        attrs="{'invisible': ['|',('state', '!=', 'assigned'), ('qty_done', '!=', 0)]}"
                        options="{&quot;warn&quot;: true}"/>
            </xpath>

            <xpath expr="//field[@name='move_lines']/tree/field[@name='product_uom_qty']" position="after">
                <button name="force_set_qty_done"
                    string="↳Copy qty. to done"
                    type="object"
                    icon="fa-download"
                    context="{'model_dest': 'stock.move'}"
                    attrs="{'invisible': ['|', ('state', 'not in', ('confirmed', 'partially_available', 'assigned')), ('quantity_done', '!=', 0)]}"
                    options="{&quot;warn&quot;: true}"/>
            </xpath>

            <xpath expr="//field[@name='move_lines']/tree/field[@name='reserved_availability']" position="after">
                <button name="force_set_assigned_qty_done"
                    string="↳Copy qty. to done"
                    type="object"
                    icon="fa-download"
                    context="{'model_dest': 'stock.move'}"
                    attrs="{'invisible': ['|', ('state', 'not in', ('confirmed', 'partially_available', 'assigned')), ('quantity_done', '!=', 0)]}"
                    options="{&quot;warn&quot;: true}"/>
            </xpath>

        </field>
    </record>

    <template id="external_layout_standard_custom" inherit_id="custom_documents.external_layout_standard_custom">
        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header" style="font-family: Questrial">
                <div class="row" t-if="partner">
                    <div class="col-xs-9" name="company_address">
                        <span t-if="partner" t-esc="partner"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile", "email", "website"], "no_marker": true, "no_tag_br": True, "vat": True, "vat_label": company.country_id.vat_label, "company_address": True}'
                        />
                    </div>
                    <div class="col-xs-3 mb4">
                        <img class=" pull-right" t-if="partner.image" t-att-src="'data:image/png;base64,%s' % to_text(partner.image)" style="max-height: 100px;"/>
                    </div>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-xs-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

