<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_move_tree_custom" model="ir.ui.view">
        <field name="name">stock.picking.move.tree.custom</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_picking_move_tree"/>
        <field name="arch" type="xml">
            <field name="reserved_availability" position="after">
                <button name="force_set_qty_done"
                        string="↳Copy qty. to done"
                        type="object"
                        icon="fa-cart-arrow-down "
                        context="{'model_dest': 'stock.move.line'}"
                        attrs="{'invisible': ['|',('state', '!=', 'assigned'), ('quantity_done', '!=', 0)]}"
                        />
            </field>
            <field name="reserved_availability" position="after">
                <button class="oe_link oe_right oe_edit_only" context="{'model_dest': 'stock.move'}"
                        name="force_set_assigned_qty_done" type="object" string="↳Copy assigned to done"
                        attrs="{'invisible':[('state','!=', 'assigned')]}"/>
            </field>
        </field>
    </record>

    <record id="view_stock_move_line_operation_tree_custom" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.custom</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <field name="qty_done" position="attributes">
                <attribute name="attrs">{'readonly': ['|', '&amp;', ('state', '=', 'done'), ('is_locked', '=', True), ('in_entire_package', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
