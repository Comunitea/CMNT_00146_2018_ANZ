<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="move_lines" position="after">
                <button name="force_set_qty_done" type="object" string="Copy qty. to done" states="confirmed,assigned"/>
            </field>
            <xpath expr="//field[@name='move_lines']/tree/field[@name='quantity_done']" position="after">
                <button name="force_set_qty_done" type="object" states="confirmed,partially_available" class="fa fa-copy"/>
            </xpath>
        </field>
    </record>

</odoo>
