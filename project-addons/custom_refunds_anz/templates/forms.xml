<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="default_order_form" name="Default Order Form Anzamar Snippet">
        <div class="form-group form-field o_website_form_required">
            <label class="col-md-3 col-sm-4 control-label" for="name">Order</label>
            <div class="col-md-7 col-sm-8">
                <input type="text" class="form-control o_website_form_input" name="order_id" required="" t-att-value="request.params.get('order_id', '')" />
            </div>
        </div>
    </template>

    <template id="default_order_hidden_fields_forms" name="Default order Form Hidden Fields Anzamar Snippet">
       <div class="form-group form-field o_website_form_required_custom">
            <input type="hidden" class="form-control o_website_form_input" name="contact_name" t-att-value="request.env.user.name" required=""/>
            <input type="hidden" class="form-control o_website_form_input" name="partner_id" t-att-value="request.env.user.partner_id.id" required=""/>
            <input type="hidden" class="form-control o_website_form_input" name="partner_name" t-att-value="request.env.user.partner_id.name" required=""/>
            <input type="hidden" class="form-control o_website_form_input" name="email_from" t-att-value="request.env.user.email" required=""/>
            <input type="hidden" class="form-control o_website_form_input" name="phone" t-att-value="request.env.user.phone" required=""/>
            <input type="hidden" class="form-control o_website_form_input" name="name" t-att-value="request.env.user.company_id.name" required=""/>
            <div class="form-group form-field o_website_form_required_custom">
                <label class="col-md-3 col-sm-4 control-label" for="description">Question</label>
                <div class="col-md-7 col-sm-8">
                    <textarea class="form-control o_website_form_input" name="description" required=""><t t-esc="request.params.get('description', '')"/></textarea>
                </div>
            </div>
       </div>        
    </template>

    <!-- Default contact form with google recapthca and terms of use-->
    <template id="default_contact_form" name="Contact Form Anzamar Snippet" inherit_id="theme_anzamar.default_contact_form">
        <xpath expr="//t[@t-call='theme_anzamar.default_fields_forms']" position="replace">
            <t t-if="request.params.get('order_id', '')">
                <t t-call="custom_refunds_anz.default_order_form"/>
                <t t-call="custom_refunds_anz.default_order_hidden_fields_forms"/>
            </t>
            <t t-else="">
                <t t-call="theme_anzamar.default_fields_forms"/>
            </t>
        </xpath>
        <xpath expr="//form/input[@name='name']" position="replace">
            <t t-if="request.params.get('order_id', '')">
                <input type="hidden" name="name" t-att-value="'[%s] Nueva solicitud de devoluciÃ³n' % request.params.get('order_id', '')" />
            </t>
            <t t-else="">
                <input type="hidden" name="name" value="Nueva solicitud de contacto" />
            </t>
        </xpath>
        
    </template>

</odoo>