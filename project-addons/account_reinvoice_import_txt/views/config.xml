<?xml version="1.0"?>
<odoo>

<record id="res_config_settings_view_form_files_txt" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.partner.fiels_txt.risk</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@id='account_followup']/.." position="inside">
            <div class="col-xs-12 col-md-6 o_setting_box" title="This for account import invoice in txt.">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                    <label string='Account txt import'/>
                    <span class="fa fa-lg fa-building-o" title="Folder to find txt to import" groups="account.group_account_manager"/>
                    <div class="text-muted">
                        Set path to txt files
                    </div>
                    <div class="content-group">
                        <div class="row mt16">
                            <label string="Txt path" for="path_txt_files" class="col-md-3 o_light_label"/>
                            <field name="path_txt_files"/>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>

</odoo>
