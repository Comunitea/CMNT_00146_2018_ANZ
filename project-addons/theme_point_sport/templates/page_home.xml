<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="point_sport_homepage_content">
        <t t-call="website.layout">
            <div id="wrap">
                <!-- Slider section -->
                <div id="carousel_point_sport" class="carousel slide" data-ride="carousel">
                    <!-- Slider access control for public and retail users -->
                    <t t-if="request.env.user.has_group('base.group_public')">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel_point_sport" data-slide-to="0" class="active"/>
                            <li data-target="#carousel_point_sport" data-slide-to="1"/>
                            <li data-target="#carousel_point_sport" data-slide-to="2"/>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-01.jpg" alt="First slide"/>
                                <div class="carousel-caption">
                                    <h1>Team Wear</h1>
                                    <h3>Pensado especialmente para equipos</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-02.jpg" alt="Second slide"/>
                                <div class="carousel-caption">
                                    <h1>Zapatillas</h1>
                                    <h3>Adaptadas a todas las necesidades</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-01.jpg" alt="Third slide"/>
                                <div class="carousel-caption">
                                    <h1>Testil</h1>
                                    <h3>Nuevas lineas pensadas para tí</h3>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel_point_sport" data-slide-to="0" class="active"/>
                            <li data-target="#carousel_point_sport" data-slide-to="1"/>
                            <li data-target="#carousel_point_sport" data-slide-to="2"/>
                            <li data-target="#carousel_point_sport" data-slide-to="3"/>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-03.jpg" alt="First slide"/>
                                <div class="carousel-caption">
                                    <h1>Team Wear</h1>
                                    <h3>Pensado especialmente para equipos</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-02.jpg" alt="Second slide"/>
                                <div class="carousel-caption">
                                    <h1>Zapatillas</h1>
                                    <h3>Adaptadas a todas las necesidades</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-03.jpg" alt="Third slide"/>
                                <div class="carousel-caption">
                                    <h1>Testil</h1>
                                    <h3>Nuevas lineas pensadas para tí</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/home/slider-02.jpg" alt="Second slide"/>
                                <div class="carousel-caption">
                                    <h1>Zapatillas</h1>
                                    <h3>Adaptadas a todas las necesidades</h3>
                                </div>
                            </div>
                        </div>
                    </t>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel_point_sport" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"/>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel_point_sport" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"/>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- Content section -->
                <div class="container">
                    <t t-call="theme_anzamar.demo_page_content"/>
                </div>
            </div>
        </t>
    </template>

</odoo>