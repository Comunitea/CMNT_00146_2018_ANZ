<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Remove the product breadcrumb's bar -->
    <template id="poi_breadcrumbs_product_remove" name="Remove Product BreadCrumbs Point Template" inherit_id="website_multi_theme.auto_view_poi_website_sale_product">
        <xpath expr="//ol[hasclass('breadcrumb')]" position="attributes">
            <attribute name="t-if">True == False</attribute>
        </xpath>
    </template>

</odoo>