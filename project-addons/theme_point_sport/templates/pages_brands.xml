<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">

    <!-- ======================================= Brand pages ======================================= -->

    <!-- Umbro brand page-->
    <template id="poi_template_brand_umbro" name="Umbro brand page template">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 oe_structure"/>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <record id="poi_page_brand_umbro" model="website.page">
        <field name="name">Umbro</field>
        <field name="website_ids" eval="[(6, 0, [ref('website_base_multi_anz.point_sport_website')])]"/>
        <field name="website_published">True</field>
        <field name="url">/page/brands/umbro</field>
        <field name="view_id" ref="poi_template_brand_umbro"/>
    </record>

