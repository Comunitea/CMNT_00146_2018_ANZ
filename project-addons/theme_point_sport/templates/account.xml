<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="poi_auth_signup_login" name="Sign up / Reset Password Point Template" inherit_id="auth_signup.login">
        <xpath expr="//a[@t-if='signup_enabled']" position="attributes">
            <attribute name="t-if">signup_enabled and not website.name == 'Point Sport'</attribute>
        </xpath>
    </template>

    <template id="poi_auth_signup_signup" name="Sign up login Point Template" inherit_id="auth_signup.signup">
        <xpath expr="//form[hasclass('oe_signup_form')]" position="attributes">
            <attribute name="t-if">not message and not website.name == 'Point Sport'</attribute>
        </xpath>
    </template>

</odoo>