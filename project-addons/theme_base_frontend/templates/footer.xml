<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="tbf_website_footer_default" inherit_id="website_multi_theme.auto_view_1_website_footer_default">
        <xpath expr="//div[@id='footer']//div[hasclass('row')]" position="replace">
            <div class="row">
                <div class="col-md-4">
                    <h4>Quiénes somos</h4>
                    <p><span t-esc="'website_multi_theme.auto_view_%s_%s' % (website.id, request.env['ir.ui.view'].search([('website_id', '=', website.id), ('arch_db', 'like', 'website.footer_custom')]).origin_view_id.id)"></span></p>
                    <ul class="list-unstyled">
                        <li><a href="#">Grupo Anzamar</a></li>
                        <li><a href="#">Presencia nacional</a></li>
                    </ul>
                    <h4>Prensa</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Noticias</a></li>
                    </ul>
                    <h4>Síguenos</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Newsletter</a></li>
                        <li><a href="https://es.linkedin.com/company/grupo-anzamar" target="_blank" rel="nofollow">LinkedIn</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Marcas del grupo</h4>
                    <ul class="list-unstyled">
                        <li><a href="#">Umbro</a></li>
                        <li><a href="#">Point Sport</a></li>
                        <li><a href="#">Black Laces</a></li>
                        <li><a href="#">Goalkers</a></li>
                        <li><a href="#">Feel Point</a></li>
                        <li><a href="#">Skipping</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Contacto</h4>
                    <ul class="list-unstyled">
                        <li>Grupo Anzamar</li>
                        <li>
                            <i class="fa fa-map-marker"/>
                            <a href="https://goo.gl/maps/Hm78jxSEG5B2" target="_blank" rel="nofollow">
                                <t t-esc="res_company.street"/>,
                                <t t-esc="res_company.zip"/>,
                                <t t-esc="res_company.city"/>
                            </a>
                        </li>
                        <li><i class="fa fa-phone"/><a t-field="res_company.phone" t-att-href="'tel:%s' %res_company.phone"/></li>
                        <li><i class="fa fa-envelope"/><a t-field="res_company.email" t-att-href="'mailto:%s' %res_company.email"/></li>
                    </ul>
                    <h4><a href="#">Trabaja con nosotros</a></h4>
                </div>
            </div>
        </xpath>
    </template>

</odoo>