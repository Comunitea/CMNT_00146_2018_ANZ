<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <template id="report_simple_label_anz">
    <style>
        .font_fam
        {
        font-family: "HelveticaNeue MediumCond";
        }
        .font_size_12 {
        font-size: 12px;
        }
        .font_size_18 {
        font-size: 18px;
        }
        .font_size_8 {
        font-size: 8px;
        margin-left: 8px
        }
    </style>
        <div class="col-xs-4" style="padding:0;">
       <table style="border-spacing:2; margin-bottom:0;width: 200px">
            <tbody>
                <tr>
                    <td style="border: 0px solid black; text-align: center; vertical-align: middle; height: 26px" colspan="3">
                        <span class="font_size_18 font_fam" t-field="product.product_tmpl_id.ref_template"/>
                    </td>
                </tr>
                <tr>
                    <td style="border: 0px solid black; vertical-align: middle; text-align: left; width: 10%; height: 27px">
                      <span class="font_size_8 font_fam">Talla</span>
                    </td>
                    <td style="border: 0px solid black; vertical-align: middle; text-align: right; width: 40%; height: 27px">
                       <span class="font_size_12 font_fam" t-field="product.attribute_value_ids[0].name"/>
                    </td>
                    <td rowspan="2" style="border: 0px solid black; text-align: center; width: 50%; vertical-align: middle; height: 40px">
                        <img t-if="product.barcode and len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', product.barcode, 400, 200)" style="width:100px; height:40px;"/>
                        <span style="font-size: 8px; height:19px" t-field="product.barcode"/>
                    </td>
                </tr>
                <tr>
                  <td style="border: 0px solid black; vertical-align: middle; text-align: left; width: 10%; height: 27px">
                      <span class="font_size_8 font_fam">PVP</span>
                    </td>

                    <td style="border: 0px solid black; vertical-align: middle; text-align: right; width: 40%; height:27px">

                        <span class="font_size_18 font_fam" t-esc="product.list_price" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</template>
<template id="report_productlabel_anz">
    <t t-foreach="docs" t-as="product">
        <div class="page">
            <t t-call="web.basic_layout">

                    <t t-call="product_custom_anz.report_simple_label_anz">
                        <t t-set="product" t-value="product"/>
                    </t>

            </t>
        </div>
    </t>
</template>


        <record id="paperformat_product_tag" model="report.paperformat">
            <field name="name">Etiquetas</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">29</field>
            <field name="page_width">62</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">4</field>
            <field name="margin_bottom">4</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">180</field>
        </record>

        <report
            string="Etiquetas POS (Sin rebaja)"
            id="action_print_tag"
            model="product.product"
            report_type="qweb-pdf"
            name="product_custom_anz.report_productlabel_anz"
            file="product_custom_anz.report_productlabel_anz"
            print_report_name="'Etiqueta: %s' % (object.display_name)"
            paperformat="product_custom_anz.paperformat_product_tag"/>




</odoo>