<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Header Template-->
    <template id="anz_website_layout" name="Layout Anzamar Template" inherit_id="website_multi_theme.auto_layout_website_anz">
        <xpath expr="//div[@id='wrapwrap']//div[hasclass('navbar')]" position="before">
            <div groups="website.group_website_publisher" class="clearfix mt32 header-fixed-margin"/>
            <div class="wp-contact-navbar">
                <div class="container contact-navbar">
                    <div class="row">
                        <div class="visible-xs col-xs-4">
                            <a t-att-href="'tel:%s' %res_company.phone"><i class="fa fa-phone mr4"/></a>
                            <a t-att-href="'mailto:%s' %website.email"><i class="fa fa-envelope"/></a>
                        </div>
                        <div class="col-md-2 col-sm-3 hidden-xs">
                            <div class="header-phone">
                                <i class="fa fa-phone"/>
                                <a t-field="res_company.phone" t-att-href="'tel:%s' %res_company.phone"/>
                            </div>
                            <div class="contact-separator hidden-sm"/>
                        </div>
                        <div class="col-md-3 col-sm-4 hidden-xs">
                            <div class="header-email">
                                <i class="fa fa-envelope"/>
                                <a t-field="website.email" t-att-href="'mailto:%s' %website.email"/>
                            </div>
                        </div>
                        <div class="col-md-7 hidden-sm hidden-xs"/>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@id='wrapwrap']//div[hasclass('navbar')]" position="after">
            <t t-call="breadcrumbs_base.bcb_main_wrap"/>
        </xpath>
        <xpath expr="//div[@id='wrapwrap']/header" position="attributes">
            <attribute name="t-att-class">'homepage-header' if xmlid == 'website.homepage' else None</attribute>
        </xpath>
        <!-- Add wishlist menu -->
        <xpath expr="//header//ul[@id='top_menu']/li[@id='my_cart']" position="after">
            <t t-if="request.env.ref('website_multi_theme.auto_view_anz_website_sale_wishlist_add_to_wishlist').active">
                <t t-set='wishcount' t-value="len(request.env['product.wishlist'].current())"/>
                <li id="my_wish" t-att-style="not wishcount and 'display:none;'">
                    <a href="/shop/wishlist">
                        <i class="fa fa-heart"/>
                        <sup t-attf-class="my_wish_quantity o_animate_blink label label-primary"><t t-esc='wishcount'/></sup>
                    </a>
                </li>
            </t>
        </xpath>
    </template>

    <template id="anz_logo_show" name="Logo Show Anzamar Template" inherit_id="website_multi_theme.auto_view_anz_website_layout_logo_show">
        <xpath expr="//a[hasclass('navbar-brand')]/span" position="replace">
            <img class="img img-responsive" src="/theme_anzamar/static/img/anzamar/logo-horizontal-white-sm.png" alt="res_company.name"/>
        </xpath>
    </template>

    <template id="anz_website_sale_header" name="Header my cart link without text" inherit_id="website_sale.header">
        <xpath expr="//li[@id='my_cart']/a" position="replace">
            <a href="/shop/cart">
                <i class="fa fa-shopping-cart"/>
                <sup t-attf-class="my_cart_quantity label label-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
            </a>
        </xpath>
    </template>

</odoo>