<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="anz_open_shop_content_template" name="open Shop Anzamar Content Template" inherit_id="theme_anzamar.page_open_shop">
        <xpath expr="//div[@class='container']" position="inside">
            <section id="open_section">
                <!--Carousel-->
                <div id="carousel_open_shop" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel_open_shop" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel_open_shop" data-slide-to="1"></li>
                        <li data-target="#carousel_open_shop" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img class="img-responsive" src="/theme_anzamar/static/img/anzamar/abre.jpg" alt="First slide"/>
                            <div class="carousel-caption">
                                <h1>Abre tú tienda</h1>
                                <h3>Revisa los pasos para abrir tu tienda</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="/theme_anzamar/static/img/anzamar/pasos.jpg" alt="Second slide"/>
                            <div class="carousel-caption">
                                <h1>Pasos para abrir tú tienda</h1>
                                <h3>Fácil y sencillo</h3>
                            </div>
                        </div>
                        <div class="item">
                            <img class="img-responsive" src="/theme_anzamar/static/img/anzamar/request.png" alt="Third slide"/>
                            <div class="carousel-caption">
                                <h1>Solicitud de Apertura</h1>
                                <h3>Rellena nuestro formulario</h3>
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel_open_shop" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel_open_shop" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <h1>Open Your Shop</h1>
                <h2>Instructions to open your shop with Anzamar Group</h2>
                <p>Please, follow the instructions</p>
            </section>

            <section id="step_section" class="mt32">
                <h1>Open Your Shop Steps</h1>
                <h2>Steps to open your shop with Anzamar Group</h2>
                <p>These are the instructions:</p>
                <p>...</p>
                <p>...</p>
                <p>...</p>
            </section>
            <section id="request_section" class="mt32 mb32">
                <h1>Open Request</h1>
                <h2>Form to open your shop with Anzamar Group</h2>
                <p>These are the requirements:</p>
                <p>...</p>
                <p>...</p>
                <p>...</p>
            </section>
            <!-- Snippets' area -->
            <div class="oe_structure" />
        </xpath>
    </template>

</odoo>