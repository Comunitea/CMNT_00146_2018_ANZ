<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">

    <!-- ======================================= Page Open Your Shop ======================================= -->
    <template id="anzamar_page_open_shop">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container"/>
            </div>
        </t>
    </template>

    <record id="anzamar_id_page_open_shop" model="website.page">
        <field name="name">Open Your Shop</field>
        <field name="website_published">True</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="url">/page/open_shop</field>
        <field name="view_id" ref="anzamar_page_open_shop"/>
     </record>

    <!-- Open Shop Menu -->
    <record id="anzamar_open_shop_menu" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop</field>
        <field name="page_id" ref="anzamar_id_page_open_shop"/>
        <field name="parent_id" ref="anzamar_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- Open Shop Submenu -->
    <record id="anzamar_open_shop_submenu_open" model="website.menu">
        <field name="name">Open Your Shop</field>
        <field name="url">/page/open_shop#opensection</field>
        <field name="parent_id" ref="anzamar_open_shop_menu"/>
        <field name="sequence" type="int">10</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="anzamar_open_shop_submenu_steps" model="website.menu">
        <field name="name">Open Your Shop Steps</field>
        <field name="url">/page/open_shop#step_section</field>
        <field name="parent_id" ref="anzamar_open_shop_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="website_published">True</field>
    </record>
    <record id="anzamar_open_shop_submenu_request" model="website.menu">
        <field name="name">Open Request</field>
        <field name="url">/page/open_shop#request_section</field>
        <field name="parent_id" ref="anzamar_open_shop_menu"/>
        <field name="sequence" type="int">30</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="website_published">True</field>
    </record>

    <!-- ======================================= Page Anzamar Group ======================================= -->
    <template id="anzamar_page_anzamar_group">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <section id="who_section">
                        <h1>Who we are?</h1>
                        <h2>We are Anzamar Group</h2>
                        <p>We are a great company that ...</p>
                        <p>...</p>
                    </section>
                    <section id="group_section">
                        <h1>Anzamar Group</h1>
                        <h2>Anzamar Group is ...</h2>
                        <p>The Anzamar companies are ...</p>
                        <p>...</p>
                    </section>
                    <section id="nation_section">
                        <h1>Nation Presence</h1>
                        <h2>Form to open your shop with Anzamar Group</h2>
                        <p>These are the requirements:</p>
                        <p>...</p>
                    </section>
                    <!-- Snippets' area -->
                    <div class="oe_structure" />
                </div>
            </div>
        </t>
    </template>

    <record id="anzamar_id_page_anzamar_group" model="website.page">
         <field name="name">Anzamar Group</field>
         <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
         <field name="website_published">True</field>
         <field name="url">/page/anzamar_group</field>
         <field name="view_id" ref="anzamar_page_anzamar_group"/>
     </record>

    <!-- Anzamar Group Menu -->
    <record id="anzamar_group_menu" model="website.menu">
        <field name="name">Anzamar Group</field>
        <field name="url">/page/anzamar_group</field>
        <field name="page_id" ref="anzamar_id_page_anzamar_group"/>
        <field name="parent_id" ref="anzamar_main_menu"/>
        <field name="sequence" type="int">20</field>
        <field name="website_id" ref="module_multi_base_anz.anzamar_website"/>
        <field name="website_published">True</field>
    </record>


