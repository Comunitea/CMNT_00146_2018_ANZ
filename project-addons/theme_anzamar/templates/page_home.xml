<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="anzamar_homepage_content">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div id="carousel_brand_umbro" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel_brand_umbro" data-slide-to="0" class="active"/>
                            <li data-target="#carousel_brand_umbro" data-slide-to="1"/>
                            <li data-target="#carousel_brand_umbro" data-slide-to="2"/>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="img-responsive" src="/theme_anzamar/static/img/umbro/umbro_carousel_1.jpg" alt="First slide"/>
                                <div class="carousel-caption">
                                    <h1>Team Wear</h1>
                                    <h3>Pensado especialmente para equipos</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/umbro/umbro_carousel_2.jpg" alt="Second slide"/>
                                <div class="carousel-caption">
                                    <h1>Zapatillas</h1>
                                    <h3>Adaptadas a todas las necesidades</h3>
                                </div>
                            </div>
                            <div class="item">
                                <img class="img-responsive" src="/theme_anzamar/static/img/umbro/umbro_carousel_3.jpg" alt="Third slide"/>
                                <div class="carousel-caption">
                                    <h1>Testil</h1>
                                    <h3>Nuevas lineas pensadas para t√≠</h3>
                                </div>
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel_brand_umbro" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"/>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel_brand_umbro" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"/>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="row mt32 mb32">
                        <h2 class="text-center mt32 mb32">Brands of our group</h2>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-umbro.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Umbro"/></a>
                        </div>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-point-sport.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Point Sport"/></a>
                        </div>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-black-laces.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Black Laces"/></a>
                        </div>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-goalkers.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Goalkers"/></a>
                        </div>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-feel-point.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Feel Point"/></a>
                        </div>
                        <div class="col-md-2 col-sm-4 mb16">
                            <a href="#"><img src="/theme_anzamar/static/img/home/brand-skipping.png"
                                             class="img-responsive img-circle img-thumbnail" alt="Skipping"/></a>
                        </div>
                    </div>
                    <!-- Latest news section -->
                    <t t-set="latest_posts" t-value="website.latest_posts(website, 3, 3)"/>
                    <div class="row mt32 mb32 latest_posts-wrap" t-if="latest_posts">
                        <div class="col-md-12 latest_posts-title">
                            <h2 class="text-center mt32 mb32">Our latest news</h2>
                        </div>
                        <t t-set="col_md" t-value="latest_posts['col_md']"/>
                        <t t-foreach="latest_posts['posts']" t-as="post">
                            <t t-call="website_blog_base.wbb_latest_post"/>
                        </t>
                        <div class="col-md-12 latest_posts-all-posts">
                            <div class="text-center">
                                <a href="/blog" class="mt32 mb32 btn btn-default" style="font-size: 140%; font-weight: 600;">Read all our news</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>