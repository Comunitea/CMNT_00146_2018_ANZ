<?xml version="1.0"?>
<odoo>
    <record id="wizard_yesno_confirmation" model="ir.ui.view">
            <field name="name">Action con firm</field>
            <field name="model">yesno.confirmation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Message" version="7.0">
                    <separator string="Confirmation" colspan="6"/>
                    <field name="question" colspan="4" nolabel="1" readonly="1"  widget="html"/>
                    <newline/>
                    <separator colspan="6"/>
                    <footer>
                        <button name="confirm" type="object" string="Yes" class="oe_highlight"/>
                        <button special="cancel" string="No"/>
                    </footer>
                </form>
            </field>
    </record>
</odoo>