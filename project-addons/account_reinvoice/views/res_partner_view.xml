<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_add_rules" model="ir.ui.view">
        <field name="name">res.partner.form.commercial.rules</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" class="oe_stat_button" name="action_view_reinvoice_rules" icon="fa-list">
                    <field name="reinvoice_rules_count"  widget="statinfo" string="Reinvoice Rules"/>                        
                </button>
            </xpath>
        </field>
    </record>

</odoo>
